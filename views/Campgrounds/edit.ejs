<% include /Git/Yelpcamp/views/Partials/header.ejs %>

<div class="row">
	<div style="width:30%; margin:15px auto;">
	<h1 style="text-align:center; margin-bottom:20px;"> Edit campground </h1>
		<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" value="<%=campground.name%>" name="campground[name]">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" value="<%=campground.price%>" name="campground[price]" min="0.1" step="0.01">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" value="<%=campground.description%>" name="campground[description]">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="location" value="<%= campground.location %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
		</form>
	</div>
</div>

<% include /Git/Yelpcamp/views/Partials/footer.ejs %>